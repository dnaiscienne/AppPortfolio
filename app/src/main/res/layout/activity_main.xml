<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:layout_marginBottom="32dp"
        android:textSize="24sp"
        android:text="My Nanodegree Apps!" />

    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:paddingLeft="48dp"
        android:paddingRight="48dp"
        android:layout_gravity="center_vertical">


        <Button
            style="@style/ButtonStyle"
            android:id="@+id/movies"
            android:text="Popular Movies" />

        <Button
            style="@style/ButtonStyle"
            android:id="@+id/spotify"
            android:text="Spotify Streamer" />


        <Button
            style="@style/ButtonStyle"
            android:id="@+id/superduo"
            android:text="Super Duo" />

        <Button
            style="@style/ButtonStyle"
            android:id="@+id/build"
            android:text="Build It Bigger" />

        <Button
            style="@style/ButtonStyle"
            android:id="@+id/material"
            android:text="Material Design" />

        <Button
            style="@style/ButtonStyle"
            android:background="#6A1B9A"
            android:id="@+id/capstone"
            android:text="Capstone: My Own App" />
    </LinearLayout>
</LinearLayout>
